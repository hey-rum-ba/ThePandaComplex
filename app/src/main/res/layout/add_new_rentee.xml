<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    xmlns:android="http://schemas.android.com/apk/res/android"><LinearLayout    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:isScrollContainer="false"    android:orientation="vertical"    android:padding="8dp">    <EditText        android:id="@+id/renteeNameInNewRentee"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="8dp"        android:gravity="center_vertical"        android:hint="@string/name"        android:minHeight="48dp"        android:padding="4dp"        android:textSize="18sp" />    <EditText        android:id="@+id/noOfRenteesInNewRentee"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="8dp"        android:gravity="center_vertical"        android:hint="@string/no_of_rentees"        android:inputType="number"        android:minHeight="48dp"        android:padding="4dp"        android:textSize="18sp" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_margin="8dp"        android:orientation="horizontal"        android:padding="2dp">        <EditText            android:id="@+id/meterReading1InNewRentee"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_margin="8dp"            android:layout_weight="1"            android:ems="10"            android:hint="@string/meter_reading_1"            android:inputType="number"            android:textSize="18sp"            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />        <EditText            android:id="@+id/meterReading2InNewRentee"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_margin="8dp"            android:layout_weight="1"            android:ems="10"            android:hint="@string/meter_reading_2"            android:inputType="number"            android:textSize="18sp"            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />    </LinearLayout>    <DatePicker        android:id="@+id/lastRentInNewRentee"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="center_horizontal"        android:layout_margin="8dp" />    <Button        android:id="@+id/submit"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="center"        android:layout_margin="8dp"        android:text="@string/button" /></LinearLayout></ScrollView>